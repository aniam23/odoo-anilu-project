<odoo>
    <data>
        <record id="view_inherit_production_mm" model="ir.ui.view">
            <field name="name">view.inherit.production.mm</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <button name="action_cancel" position="before">
                    <button name="change_priori" attrs="{'invisible': [('is_pdos', '=', False)]}" type="object" string="Cambiar prioridad" class="oe_highlight"/>
                </button>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[@name='group_extra_info']/field[@name='company_id']" position="after">
                    <field name="priori"/>
                    <field name="is_pdos"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>