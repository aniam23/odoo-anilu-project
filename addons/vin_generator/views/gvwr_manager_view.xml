<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="gvwr_manager_form">
            <field name="name">GVWR</field>
            <field name="model">vin_generator.gvwr_manager</field>
            <field name="arch" type="xml">
              <form>
                 <sheet>
                  <group>
                    <field name="name" readonly="1">GVWR</field>
                    <field name="weight_lb"/>
                    <field name="weight_kg"/>
                  </group>
                </sheet>
              </form>
            </field>  
        </record> 
        <record model="ir.ui.view" id="gvwr_manager_list">
          <field name="name">XML list</field>
          <field name="model">vin_generator.gvwr_manager</field>
          <field name="arch" type="xml">
            <tree create="false">
                <field name="name"></field>
                <field name="weight_lb"/>
                <field name="weight_kg"/>
            </tree>
          </field>
        </record>
        
        <record model="ir.actions.act_window" id="gvwr_manager_form_action_window">
            <field name="name">GVWR</field>
            <field name="res_model">vin_generator.gvwr_manager</field>
            <field name="view_mode">form</field>
        </record>

        <record model="ir.actions.act_window" id="gvwr_manager_log_action_window">
          <field name="name">GVWR Log</field>
          <field name="res_model">vin_generator.gvwr_manager</field>
          <field name="view_mode">tree</field>
        </record>

        <menuitem name="GVWR" id="vin_generator.gvwr" parent="vin_generator.menu_root"/>
        
        <menuitem name="GVWR Regestry" id="vin_generator.gvwr_regestry" parent="vin_generator.gvwr"
                  action="gvwr_manager_log_action_window"/>
        <menuitem name="New GVWR" id="vin_generator.gvwr_new" parent="vin_generator.gvwr"
                  action="gvwr_manager_form_action_window"/>
    </data>
</odoo>