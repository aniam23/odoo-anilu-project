<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="invoice_title_generator" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
          <div name="button_box" position="inside">
              <field name="print_button_visible" invisible="1"/>
              <button class="oe_stat_button" type="object" name="show_wizard" icon="fa-file"
                attrs="{'invisible':[('print_button_visible','==',False)]}">
                  <field string="Print Title" name="num_of_titles" widget="statinfo"/>
              </button>
          </div>
        </field>    
    </record>
  </data>
</odoo>