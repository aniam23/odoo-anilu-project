<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record id="model_mrp_production_access" model="ir.model.access">
            <field name="name">mrp.production access</field>
            <field name="model_id" ref="model_mrp_production"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        <record id="production_vin" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
		        <xpath expr="//field[@name='user_id']" position="after">
                    <field name="show_vin" invisible="1"/>
		            <field name="vin_dispayed"  attrs="{'invisible': [('show_vin', '!=', True)]}"/>
		        </xpath>
            </field>
        </record>

  </data>
</odoo>