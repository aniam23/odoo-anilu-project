<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record id="product_gvwr" model="ir.ui.view">
            <field name="name">product.template.common.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='product_tooltip']" position="after">
		            <field name="is_trailer"/>
              </xpath>
              <notebook position="inside">
                <page string="Customs" name="customs" attrs="{'invisible':[('is_trailer','==',False)]}">
                  <group>
                    <field name="gvwr_related"/>
                    <field name="trailer_type"/>
                    <field name="model_year"/>
                    <field name="axles"/>
                    <field name="tongue_type"/>
                    <field name="length"/>
                  </group>
                </page>
              </notebook>
            </field>
        </record>
  </data>
</odoo>