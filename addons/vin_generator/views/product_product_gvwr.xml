<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

        <record id="product_product_gvwr" model="ir.ui.view">
            <field name="name">product.product.form1</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
		        <xpath expr="//field[@name='gvwr_related']" position="replace">
                    <field name="gvwr_child"/>
                 
		        </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="trailer_code" attrs="{'invisible':[('is_trailer','==',False)]}"/>
                    <field name="trailer_name" attrs="{'invisible':[('is_trailer','==',False)]}"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>