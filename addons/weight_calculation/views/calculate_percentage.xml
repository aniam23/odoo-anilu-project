<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="calculated_percentage_form">
            <field name="name">mrp.bom.common.form.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='consumption']" position="after">
                    <field name="percentage_scrap" class="oe_inline" widget="percentage"/>
                </xpath> 
            </field>
        </record>
    </data>
</odoo>