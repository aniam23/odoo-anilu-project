    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="fnce_xml_upld_action_window">
      <field name="name">XML</field>
      <field name="res_model">fnce_xml_upld.fnce_xml_upld</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="XML Uploader" id="fnce_xml_upld_menu_root" web_icon="fnce_xml_upld,static/description/icon.png"/>

    <menuitem name="XML" id="fnce_xml_upld_xml" parent="fnce_xml_upld_menu_root"/>

    <menuitem name="Add XML" id="fnce_xml_upld_menu_1" parent="fnce_xml_upld_xml"
