<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fnce_xml_upld_form">
      <field name="name">fnce_xml_upld.form</field>
      <field name="model">fnce_xml_upld.fnce_xml_upld</field>
      <field name="arch" type="xml">
        <form create="false">
           <sheet>
            <group>
              <field name="buttonVisibility" invisible="1"/>
              <field name="description" readonly="1"/>
              <field name="files" widget="many2many_binary"/>
              <button name="use_files" string="Create Drafts" type="object" attrs="{'invisible':[('buttonVisibility','==',True)]}"/>            
            </group>
          </sheet>
        </form>
      </field>
    </record>  

