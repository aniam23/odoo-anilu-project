        <record model="ir.ui.view" id="main_view_form">
            <field name="name">main.view.form</field>
            <field name="model">main.view</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <h1>HT LOGISTICS</h1>
                                    <field  name="state" widget="statusbar" 
                                            statusbar_visible="PROXIMAS CARGAS,CARGAS RTS EN ESPERA,SO LISTOS PARA ENVIAR,EN TRANSITO,COMPROBANTE DE ENTREGA,ENTREGADO"
                                            options="{'clickable': '2'}" style="display: none;"/>
                                </div>
                            </div>
                          
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #e7f5fe;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-calendar-check-o"/> PRÃ“XIMAS CARGAS
                                        <button name="write" string="V"  
                                                type="object" 
                                                class="oe_link"
                                                args="{'state': 'PROXIMAS CARGAS'}"/>
                                    </h3>
                                </div>
                                <div class="panel-body" attrs="{'invisible': [('state','!=','PROXIMAS CARGAS')]}">
                                    <field string="PROXIMAS CARGAS" name="sale_order_ids" 
                                           mode="tree,kanban">
                                        <tree>
                                            <field name="name"/>
                                            <field name="partner_id"/>
                                            <field name="date_order"/>
                                            <field name="amount_total"/>
                                            <field name="state"/>
                                        </tree>
                                        <kanban>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click">
                                                        <strong><field name="name"/></strong>
                                                        <div>Cliente: <field name="partner_id"/></div>
                                                        <div>Fecha: <field name="date_order"/></div>
                                                        <div>Total: <field name="amount_total"/></div>
                                                        <div>Estado: <field name="state"/></div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </div>
                            </div>
