<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="main_view_form">
            <field name="name">main.view.form</field>
            <field name="model">main.view</field>
            <field name="arch" type="xml">
                <form create="false" delete="false">
                    <sheet>
                        <div class="container-fluid">
                            <div class="row">
                                <div style="text-align: right;">
                                    <button string="Actualizar" type="object" name="update"/>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #e7f5fe;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-calendar-check-o"/> EN ESPERA DE MANUFACTURA
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <field string="EN ESPERA DE MANUFACTURA" name="sale_orders_pending_to_manufacure">
                                        <tree >
                                            <field name="name" />
                                            <field name="partner_id" />
                                            <field name="partner_address_full"/>
                                            <field name="amount_total"/>
                                            <field name="fletero"/>
                                            <field name="state"/>
                                            <field name="fechapro"/>
                                            <field name="proof_of_delivery" />
                                            <field name="downloaded_attachment_ids" />
                                            <button name="open_sale_order_edit"
                                            type="object"
                                            icon="fa-edit"
                                            context="{'active_id': id}"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #fdedec;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-hourglass-half"/> CARGAS RTS EN ESPERA
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <field string="CARGAS RTS EN ESPERA" name="sale_order_waiting_ids" mode="tree" >
                                        <tree >
                                            <field name="name" />
                                            <field name="partner_id" />
                                            <field name="partner_address_full"/>
                                            <field name="amount_total"/>
                                            <field name="fletero"/>
                                            <field name="state"/>
                                            <field name="fechapro"/>
                                            <field name="proof_of_delivery" />
                                            <field name="downloaded_attachment_ids"  />
                                            <button name="open_sale_order_edit"
                                            type="object"
                                            icon="fa-edit"
                                            context="{'active_id': id}"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #faffe0;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-upload"/> EN ESPERA DE DOCUMENTOS
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <field string="EN ESPERA DE DOCUEMNTOS" name="sale_order_in_wait_of_docuemnts">
                                        <tree >
                                            <field name="name" />
                                            <field name="partner_id" />
                                            <field name="partner_address_full"/>
                                            <field name="amount_total"/>
                                            <field name="fletero"/>
                                            <field name="state"/>
                                            <field name="fechapro"/>
                                            <field name="proof_of_delivery" />
                                            <field name="downloaded_attachment_ids"  />
                                            <button name="open_sale_order_edit"
                                            type="object"
                                            icon="fa-edit"
                                            context="{'active_id': id}"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #f3e5f5;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-truck"/> EN TRANSITO
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <field string="EN TRANSITO" name="sale_order_in_transit_ids">
                                       <tree>
                                            <field name="name" />
                                            <field name="partner_id" />
                                            <field name="partner_address_full"/>
                                            <field name="amount_total"/>
                                            <field name="fletero"/>
                                            <field name="state"/>
                                            <field name="fechapro"/>
                                            <field name="proof_of_delivery" />
                                            <field name="downloaded_attachment_ids"  />
                                            <button name="open_sale_order_edit"
                                            type="object"
                                            icon="fa-edit"
                                            context="{'active_id': id}"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color: #e8f5e9;">
                                    <h3 class="panel-title">
                                        <i class="fa fa-file-text-o"/> COMPROBANTE DE ENTREGA
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <field string="COMPROBANTE DE ENTREGA" name="sale_order_pod_ids">
                                        <tree >
                                            <field name="name" />
                                            <field name="partner_id" />
                                            <field name="partner_address_full"/>
                                            <field name="amount_total"/>
                                            <field name="fletero"/>
                                            <field name="state"/>
                                            <field name="fechapro"/>
                                            <field name="proof_of_delivery" />
                                            <field name="downloaded_attachment_ids"  />
                                            <button name="open_sale_order_edit"
                                            type="object"
                                            icon="fa-edit"
                                            context="{'active_id': id}"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_main_view_form">
            <field name="name">Documentos de Paquetes</field>
            <field name="res_model">main.view</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="main_view_form"/>
            <field name="res_id">1</field>
            <field name="target">current</field>
        </record>
        <menuitem id="menu_logistics_document_sub" 
            name="Pendientes de envio" 
            parent="logistics_document_packages_menu_root" 
            action="action_main_view_form"
            sequence="1"/>
    </data>
</odoo>