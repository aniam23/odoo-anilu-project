<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="log_reference_sequence" model="ir.sequence">
      <field name="name">Document Packages Reference Sequence</field>
      <field name="code">logistics.log_document</field>
      <field name="prefix">Package/</field>
      <field name="padding">4</field>
    </record>

    <record model="ir.ui.view" id="logistics_document_packages_list">
      <field name="name">logistics_document_packages.tree</field>
      <field name="model">logistics.log_document</field>
      <field name="arch" type="xml">
        <tree string="Logistics Document Packages Log">
          <field name="name"/>
          <field name="date"/>
          <field name="sale_order"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="logistics_document_packages_form">
      <field name="name">logistics_document_packages.form</field>
      <field name="model">logistics.log_document</field>
      <field name="arch" type="xml">
        <form string="Logistics Document Packages">
          <header>
            <button name="previous_action" string="REGRESAR" type="object" class="btn btn-primary" attrs="{'readonly': [('state', '!=', 'Sales Orders')]}"/>
            <button name="next_action" string="SIGUIENTE" type="object" class="btn btn-primary"/>
            <button name="action_print_all_documents" string="GENERAR DOCUMENTOS" type="object" class="btn btn-primary" save="1" />
            <field name="email"  placeholder="Ingresar correo"/>
            <field name="state" widget="statusbar" statusbar_visible="Sales Orders,Packing,MSO,HS7,Factura,Declaracion"/>
          </header>
          <sheet>
              <group string="Sales Order" attrs="{'invisible': [('state', '!=', 'Sales Orders')]}">
                <field name="sale_order"/>
              </group>              
              <group string="Paking List" attrs="{'invisible': [('state', 'not in', ['Packing'])]}">
                <field name="packing_name" />
                <field name="packing_scac"/>
                <field name="packing_caat"/>
                <field name="packing_truck"/>
                <field name="packing_plates"/>
                <field name="packing_trailer"/>
                <field name="packing_plates_trailer"/>
                <field name="comentarios"/>
                <field name="tramitador"/>
                <button name="print_action" string="IMPRIMIR" type="object" class="btn btn-primary"/>
              </group>
              <group string="MSO" attrs="{'invisible': [('state', '!=', 'MSO')]}">
                
                <field name="mso_dictionary" >
                    <tree  editable="bottom">
                      <field name="vin_text"/>
                      <field name="product" />
                      <field name="sale_order"/>
                      <field name="checkbox" widget="boolean"/>
                    </tree>
                </field>
               
              </group>
              <group string="HS7" attrs="{'invisible': [('state', '!=', 'HS7')]}">
              </group>
              <group string="Factura" attrs="{'invisible': [('state', '!=', 'Factura')]}">
              </group>
              <group string="Declaracion" attrs="{'invisible': [('state', '!=', 'Declaracion')]}">
              </group>
          
              
              <button name="print_action" string="IMPRIMIR" type="object" class="btn btn-primary" attrs="{'invisible': [('state', 'in', ['Sales Orders', 'Packing' ])]}"/>
             
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="logistics_document_packages_action_window_tree">
      <field name="name">Logistics Docs Packages Tree</field>
      <field name="res_model">logistics.log_document</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="logistics_document_packages_action_window">
      <field name="name">Logistics Docs Packages</field>
      <field name="res_model">logistics.log_document</field>
      <field name="view_mode">form</field>
    </record>
                    
    
    <menuitem name="Logistica HT" id="logistics_document_packages_menu_root" />
    <menuitem name="Logistica" id="logistics_document_packages" parent="logistics_document_packages_menu_root"  sequence="5"/>
    <menuitem name="Nuevo Registro" id="logistics_document_packages_menu_1" parent="logistics_document_packages" action="logistics_document_packages_action_window"/>
    <menuitem name="Ver Registros" id="logistics_document_packages_menu_2" parent="logistics_document_packages" action="logistics_document_packages_action_window_tree"/>
    
  </data>
</odoo>
