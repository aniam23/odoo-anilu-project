<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="weight_info_form">
            <field name="name">weight_info</field>
            <field name="model">weight.info</field>
            <field name="arch" type="xml">
              <form>
                 <sheet>
                  <group>
                    <field name="name">weight_info</field>
                    <field name="ref_trailer"/>
                    <field name="weight"/>
                  </group>
                </sheet>
              </form>
            </field>  
        </record> 
        <record model="ir.ui.view" id="weight_info_list">
          <field name="name">weight_info list</field>
          <field name="model">weight.info</field>
          <field name="arch" type="xml">
            <tree create="false">
                <field name="name"></field>
                <field name="ref_trailer"/>
                <field name="weight"/>
            </tree>
          </field>
        </record>
        
        <record model="ir.actions.act_window" id="weight_info_form_action_window">
            <field name="name">weight_info</field>
            <field name="res_model">weight.info</field>
            <field name="view_mode">form</field>
        </record>

        <record model="ir.actions.act_window" id="weight_info_log_action_window">
          <field name="name">weight_info LOG</field>
          <field name="res_model">weight.info</field>
          <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Weight  Options" id="options_weight_info" parent="logistics_document_packages_menu_root"/>

        <menuitem name="Add Weight" id="new_weight_info" parent="options_weight_info" action="weight_info_form_action_window"/>

        <menuitem name="weight info registry" id="weight_info_registry" parent="options_weight_info" action="weight_info_log_action_window"/>
    
    </data>
</odoo>